@model FavoriteViewModel

@{
    ViewData["Title"] = "Add favorite";
}

<div class="container">
    <div class="raw">
        <div class="offset-md-2 col-md-8 col-sm-12">
            <h2 class="text-center">Add this property to favorites</h2>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Town" class="form-label"></label>
                    <input asp-for="Town" class="form-control" value="@Model.Town">
                    <span asp-validation-for="Town" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Quarter" class="form-label"></label>
                    <input asp-for="Quarter" class="form-control" value="@Model.Town">
                    <span asp-validation-for="Quarter" class="small text-danger"></span>
                </div>                
                <div class="mb-3">
                    <label asp-for="Capacity" class="form-label"></label>
                    <input asp-for="Capacity" class="form-control" value="@Model.Capacity">
                    <span asp-validation-for="Capacity" class="small text-danger"></span>
                </div>                
                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" value="@Model.Price">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>               
                
                

                <input asp-route-id="@Model.Id" type="submit" class="btn btn-secondary" value="Add" />
            </form>
        </div>
    </div>
</div>
