@model PropertyAddViewModel

@{
    ViewData["Title"] = "Add Property";
}

<div class="container">
    <div class="raw">
        <div class="offset-md-2 col-md-8 col-sm-12">
            <h2 class="text-center">Add Property</h2>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Town" class="form-label"></label>
                    <input asp-for="Town" class="form-control" placeholder="Sofia, Plovdiv,...">
                    <span asp-validation-for="Town" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Quarter" class="form-label"></label>
                    <input asp-for="Quarter" class="form-control" placeholder="Property's quarter here...">
                    <span asp-validation-for="Quarter" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select" >
                        @foreach(var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Capacity" class="form-label"></label>
                    <input asp-for="Capacity" class="form-control" placeholder="1, 2, 3...">
                    <span asp-validation-for="Capacity" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Area" class="form-label"></label>
                    <input asp-for="Area" class="form-control" placeholder="square metres">
                    <span asp-validation-for="Area" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Floor" class="form-label"></label>
                    <input asp-for="Floor" class="form-control" placeholder="0, 1, 2...">
                    <span asp-validation-for="Floor" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="EURO">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Luxury property..."></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                

                <input type="submit" class="btn btn-primary" value="Save" />
            </form>
        </div>
    </div>
</div>
