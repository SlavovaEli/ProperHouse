@model PropertySearchViewModel

@{
    ViewData["Title"] = "Find Property";
}

<div class="container">
    <div class="raw">
        <div class="offset-md-2 col-md-8 col-sm-12">
            <h2 class="text-center">Find Property</h2>

            <form method="get">
                <div class="mb-3">
                    <label asp-for="Town" class="form-label"></label>
                    <select asp-for="Town" class="form-select">
                        <option value="All" selected>All</option>
                        @foreach(var town in Model.Towns)
                        {
                            <option value="@town">@town</option>
                        }
                    </select>                    
                </div>                
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select">
                        <option value="All" selected>All</option>
                        @foreach(var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>                    
                </div>
                <div class="mb-3">
                    <label asp-for="Capacity" class="form-label"></label>
                    <input asp-for="Capacity" class="form-control" placeholder="1, 2, 3...">
                    <span asp-validation-for="Capacity" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="EURO">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Area" class="form-label"></label>
                    <input asp-for="Area" class="form-control" placeholder="square metres">
                    <span asp-validation-for="Area" class="small text-danger"></span>
                </div>                
                              
                               

                <input type="submit" class="btn btn-secondary " asp-controller="Property" asp-action="Found" value="Find property"/>
            </form>
        </div>
    </div>
</div>

