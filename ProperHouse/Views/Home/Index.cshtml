@model List<PropertyListingViewModel>

@{
    ViewData["Title"] = "Home Page";
}

@{
    var firstProperty = Model.Any() ? Model[0] : null;
    var secondProperty = Model.Count > 1 ? Model[1] : null;
    var thirdProperty = Model.Count > 2 ? Model[2] : null;
}

<div class="offset-2 col-8">
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <h3 class="display-8">Rent the proper property for you!</h3>
    </div>
    @{
        if (Model.Any())
        {
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    @if (firstProperty != null)
                    {
                        <div class="carousel-item active">
                            <img src="@firstProperty.ImageUrl" class="d-block w-100" alt="@firstProperty.Category @firstProperty.Town">
                            <div class="carousel-caption d-none d-md-block">
                                <h5><a class="btn btn-light" asp-controller="Property" asp-action=""Details" asp-route-id="@firstProperty.Id">@firstProperty.Category in @firstProperty.Town</a></h5>
                            </div>
                        </div>
                    }
                    @if (secondProperty != null)
                    {
                        <div class="carousel-item">
                            <img src="@secondProperty.ImageUrl" class="d-block w-100" alt="@secondProperty.Category @secondProperty.Town">
                            <div class="carousel-caption d-none d-md-block">
                                <h5><a class="btn btn-light" asp-controller="Property" asp-action=""Details" asp-route-id="@secondProperty.Id">@secondProperty.Category in @secondProperty.Town</a></h5>
                            </div>
                        </div>
                    }
                    @if (thirdProperty != null)
                    {
                        <div class="carousel-item">
                            <img src="@thirdProperty.ImageUrl" class="d-block w-100" alt="@thirdProperty.Category @thirdProperty.Town">
                            <div class="carousel-caption d-none d-md-block">
                                <h5><a class="btn btn-light" asp-controller="Property" asp-action=""Details" asp-route-id="@thirdProperty.Id">@thirdProperty.Category in @thirdProperty.Town</a></h5>
                            </div>
                        </div>
                    }

                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        }
    }
</div>

